<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wells Fargo"
        android:id="@+id/wellsFargoRadioButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:checked="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextButton"
        android:layout_below="@+id/wellsFargoRadioButton"
        android:layout_alignRight="@+id/wellsFargoRadioButton"
        android:layout_alignEnd="@+id/wellsFargoRadioButton" />
</RelativeLayout>